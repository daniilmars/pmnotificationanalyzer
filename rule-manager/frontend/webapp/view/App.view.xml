<mvc:View
    controllerName="com.sap.pm.rulemanager.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    displayBlock="true">
    <f:ShellBar
        id="shellBar"
        title="Rule Manager"
        secondTitle="PM Notification Quality Suite"
        homeIcon="sap-icon://home"
        homeIconPressed=".onHomePressed"
        showNavButton="false"
        showCopilot="false"
        showSearch="false"
        showNotifications="false"
        showProductSwitcher="false">
        <f:profile>
            <Avatar initials="U" displaySize="XS"/>
        </f:profile>
    </f:ShellBar>
    <App id="app" />
</mvc:View>

<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Dialog
        id="createRulesetDialog"
        title="Create New Ruleset">
        <content>
            <f:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout">
                <f:content>
                    <Label text="Ruleset Name" required="true" />
                    <Input id="rulesetNameInput" value="" required="true" />
                    <Label text="Notification Type" required="true" />
                    <Input id="notificationTypeInput" value="" placeholder="e.g., M1" required="true" />
                </f:content>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button text="Save" type="Emphasized" press=".onSaveNewRuleset" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".onCloseDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>

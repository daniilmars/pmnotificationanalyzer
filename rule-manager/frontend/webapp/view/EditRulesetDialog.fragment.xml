<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Dialog
        id="editRulesetDialog"
        title="Edit Ruleset">
        <content>
            <f:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout">
                <f:content>
                    <Label text="Ruleset Name" required="true" />
                    <Input id="editRulesetNameInput" value="{/name}" required="true" />
                    <Label text="Notification Type" required="true" />
                    <Input id="editNotificationTypeInput" value="{/notification_type}" placeholder="e.g., M1" required="true" />
                </f:content>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button text="Save" type="Emphasized" press=".onSaveUpdateRuleset" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".onCloseEditDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>

<mvc:View
    controllerName="com.sap.pm.pmanalyzerfiori.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true">
    <Page id="loginPage" showHeader="false" class="sapUiContentPadding">
        <content>
            <FlexBox
                height="80vh"
                alignItems="Center"
                justifyContent="Center">
                <VBox class="sapUiSmallMargin" alignItems="Center">
                    <Title text="{i18n>loginWelcomeTitle}" class="sapUiTinyMarginBottom" />
                    <Text text="{i18n>loginIntroText}" class="sapUiSmallMarginBottom" />
                    <Button
                        id="loginButton"
                        text="{i18n>loginButtonText}"
                        type="Emphasized"
                        press=".onLoginPress"
                        icon="sap-icon://log" />
                </VBox>
            </FlexBox>
        </content>
    </Page>
</mvc:View>
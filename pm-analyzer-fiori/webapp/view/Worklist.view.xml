<mvc:View
    controllerName="com.sap.pm.pmanalyzerfiori.controller.Worklist"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Page id="page" title="{i18n>title}">
        <content>
            <Table
                id="table"
                width="auto"
                items="{/}"
                noDataText="Keine Daten gefunden"
                class="sapUiResponsiveMargin">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Instandhaltungsmeldungen" level="H2"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Meldungsnummer" />
                    </Column>
                    <Column>
                        <Text text="Beschreibung" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandinPopin="true">
                        <Text text="Meldungsart" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        type="Navigation"
                        press=".onPress">
                        <cells>
                            <ObjectIdentifier title="{NotificationId}" />
                            <Text text="{Description}" />
                            <Text text="{NotificationType}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
name: Deploy to SAP BTP CF

on:
  push:
    branches: [ main ]

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Code
        uses: actions/checkout@v3

      - name: Install Cloud Foundry CLI
        run: |
          curl -v -L "https://packages.cloudfoundry.org/stable?release=linux64" -o cf-cli.tgz
          tar -xvzf cf-cli.tgz
          sudo mv cf /usr/local/bin

      - name: Login to CF
        run: |
          cf api ${{ secrets.CF_API }}
          cf auth ${{ secrets.CF_USER }} ${{ secrets.CF_PASSWORD }}
          cf target -o ${{ secrets.CF_ORG }} -s ${{ secrets.CF_SPACE }}

      - name: Deploy to SAP BTP
        run: |
          cf push sap-pm-textanalyzer -f manifest.yml